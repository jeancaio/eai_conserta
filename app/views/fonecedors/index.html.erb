<p id="notice"><%= notice %></p>

<h1>Fornecedores</h1>
<div class="row">
  <%= search_form_for @q do |f| %>
    <div class="col-xs-9 col-sm-11 col-md-11">
      <%= f.search_field :nome_or_tipo_servico_or_endereco_or_descricao_or_contato_cont, placeholder: "Buscar fornecedor", class: "form-control" %>
    </div>
    <div class="col-xs-1 col-sm-1 col-md-1">
      <button  type="submit" class="btn btn-default ">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
      </button>
    </div>
  <% end %>
</div>
<div class="navbar navbar-right">
  <%= will_paginate @fonecedors, renderer: BootstrapPagination::Rails  %>
</div>
<table class="table bordered">
  <thead>
    <tr>
      <th><%= sort_link @q, :nome, "Nome" %></th>
      <th><%= sort_link @q, :tipo_servico, "Função" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fonecedors.each do |fonecedor| %>
      <tr>
        <td><%= fonecedor.nome %></td>
        <td><%= fonecedor.tipo_servico %></td>
        <td rowspan="1"><%= link_to fonecedor, class: 'btn btn-default' do %>
          <span class='glyphicon glyphicon-zoom-in'></span>
          <% end %>
        </td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Incluir', new_fonecedor_path, class: 'btn btn-default' %>
